<!------ Include the above in your HEAD tag ---------->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

     <title>Onlinehealth</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <nav class="navbar navbar-dark bg-dark justify-content-between">
   <a class="navbar-brand"><h2>&nbsp;Online Health Care</h2></a>
        <% if session[:hospital_id] %>
          <h2 class="text-light"> <%= @hospital.email%> <%= link_to "Logout", {:controller => :hospitals, :action => :logout}, { class: 'btn btn-secondary'} %> </h2>
        
        <% end %>
        <% if session[:doctor_id] %>
          <h2 class="text-light">  <%= @doctor.email%> <%= link_to "Logout", {:controller => :doctors, :action => :logout}, { class: 'btn btn-secondary'} %></h2>
          
        <% end %>
        <% if session[:patient_id] %>
          <h4 class=" text-light"> <%= @patient.email%>  <%= link_to "Logout", {:controller => :patients, :action => :logout}, { class: 'btn btn-secondary'} %></h4>
       
        <% end %>
  </nav><br/>
    <div class="container">
      <%= yield %>
    </div>
